pipeline {
    agent any
    tools { 
        maven 'LocalMaven' 
        jdk 'LocalJDK' 
    }
    stages {
        stage ('Build vehicle-status-service') {
            steps {
         		
                 sh  'mvn clean install checkstyle:checkstyle'
            }

            post{
                success{
                    echo 'Now Archiving build artifact jar file....'

                    archiveArtifacts artifacts : '**/*.jar'
                }
            }
        }

    }
}